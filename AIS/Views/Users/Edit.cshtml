@model AIS.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="row">
        <div class="col-5 mb-3">
            <div class="form-group">
                <label asp-for="UserNickName" class="control-label">Имя пользователя</label>
                <input type="text" asp-for="UserNickName" class="form-control" />
            </div>
        </div>
        <div class="col-7"></div>
    </div>
    
     <div class="row">
        <div class="col-5 mb-3">           
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
             </div>
        </div>
        <div class="col-7"></div>
    </div>

    <div class="row">
        <div class="col-5 mb-3">
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </div>
        <div class="col-7"></div>
    </div>

</form>