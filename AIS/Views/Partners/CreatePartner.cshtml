@model AIS.ViewModels.PartnersViewModels.СreatePartnerViewModel;
  <style type="text/css">
    .input__box {
        display: flex;
        flex-direction: column; 
        position: relative;
    }

    .name__input {
        background: #fff;
        padding: 10px;
        border: 1px solid #6c6c6c;
        color: #000;
    }

    .name__input_label {
        position: absolute;
        color: #6c6c6c;
        top: -10px;
        left: 20px;
        background: #fff;
        padding: 0 5px;
    }
  </style>


<h2>Добавление контрагента</h2>

<div class="container">
    <div class="row">
        <div class="col-5 mb-3">
            <select size="2" data-placeholder="Тип контрагента" class="form-select" asp-for="PartnerTypeId" asp-items="@Model.PartnerTypes" id="PartnerTypeId" onchange="getPartialView()">
            </select>
        </div>
        <div class="col-7"></div>
    </div>
</div>

<div id="partialCreatePartner"></div>

@section scripts{
    <script>
        function ApplyValidation() {
            $("#createpartner").removeData("validator");
            $("#createpartner").removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse("#createpartner");
        }
    </script>
    <script asp-src-include="~/js/partners.js"></script>
    <script asp-src-include="~/js/select.js"></script>
}