@model AIS.ViewModels.ConditionViewModel;

<h2>Изменение условия контракта</h2>

<form  asp-action="editcondition" asp-controller="process" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">

        <input type="hidden" class="form-control" asp-for="ContractTemplateId">

        <div class="row">
            <div class="col-5 mb-3">
                <select class="form-select" size="2" data-placeholder="Тип условия" id="TypeOfConditionId" asp-for="TypeOfConditionId" asp-items="@Model.TypesOfCondition">
                </select>
            </div>
            <div class="col-7"></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                    <select class="form-select" size="2" data-placeholder="Тип регулирования" id="TypeOfStateRegId" asp-for="TypeOfStateRegId" asp-items="@Model.TypesOfStateReg">
                </select>
            </div>
            <div class="col-7"></div>
        </div>
        
        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Наименование условия (заголовок)" aria-label="Наименование условия (заголовок)" asp-for="Name">
                </div>
            </div>
            <div class="col-7"></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Текст условия" aria-label="Текст условия" asp-for="Text">
                </div>
            </div>
            <div class="col-7"></div>
        </div>
    </div>

        <div class="row">
            <div class="col-12 mb-3"></div>
        </div>

    <div class="row">
        <div class="col-5 mb-3">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input class="btn btn-primary" type="submit" value="Отправить" />
            </div>
        </div>
        <div class="col-7"></div>
    </div>
</form>


<style>
    .line {
        border-bottom: 1px solid #d3d3d3; /* Параметры линии */
    }
</style>
<div class="line col-12"></div>
<h2>Пункты</h2>

<table class="table table-sm table-hover" id="currentTable">
    <tr><th onclick="sortTable(0)">Наименование</th><th onclick="sortTable(1)">Текст</th></tr>
    <tr class="table-filters">
        <td>
            <input type="text" id="tableFilter" />
        </td>
        <td>
            <input type="text" id="tableFilter" />
        </td>
    </tr>

    @foreach (var item in Model.SubConditions)
    {
        <tr class="table-data">
            <td>@if (item.Name != null) @item.Name</td>
                <td>@if (item.Text != null) @item.Text</td>

                <td align="right">
                    <a class="btn btn-outline-primary" role="button" asp-action="EditSubCondition" asp-controller="process" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td align="left">
                    <form asp-controller="process" asp-action="DeleteSubCondition" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Удалить" class="btn btn-outline-danger" />
                    </form>
                </td>
            </tr>
    }
</table>

<a class="btn btn-outline-primary" role="button" asp-action="CreateSubCondition" asp-controller="process" asp-route-id="@Model.Id">Добавить</a>

@section scripts{
    <script asp-src-include="~/js/tables.js"></script>
    <script asp-src-include="~/js/select.js"></script>
}



