@model AIS.ViewModels.SubConditionViewModel;

<h2>Изменение пункта условия контракта</h2>

<form  asp-action="editsubcondition" asp-controller="process" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">

        <input type="hidden" class="form-control" asp-for="ConditionId">
        
        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Наименование пункта условия (в контракте не фигурирует)" aria-label="Наименование пункта условия (в контракте не фигурирует)" asp-for="Name">
                </div>
            </div>
            <div class="col-7"></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Текст пункта условия" aria-label="Текст пункта условия" asp-for="Text">
                </div>
            </div>
            <div class="col-7"></div>
        </div>
    </div>

        <div class="row">
            <div class="col-12 mb-3"></div>
        </div>

    <div class="row">
        <div class="col-5 mb-3">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input class="btn btn-primary" type="submit" value="Отправить" />
            </div>
        </div>
        <div class="col-7"></div>
    </div>
</form>


<style>
    .line {
        border-bottom: 1px solid #d3d3d3; /* Параметры линии */
    }
</style>
<div class="line col-12"></div>
<h2>Подпункты</h2>

<table class="table table-sm table-hover" id="currentTable">
    <tr><th onclick="sortTable(0)">Текст</th></tr>
    <tr class="table-filters">
        <td>
            <input type="text" id="tableFilter" />
        </td>
    </tr>

    @foreach (var item in Model.SubConditionParagraphs)
    {
        <tr class="table-data">
                <td>@if (item.Text != null) @item.Text</td>

                <td align="right">
                    <a class="btn btn-outline-primary" role="button" asp-action="EditSubConditionParagraph" asp-controller="process" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td align="left">
                    <form asp-controller="process" asp-action="DeleteSubConditionParagraph" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Удалить" class="btn btn-outline-danger" />
                    </form>
                </td>
            </tr>
    }
</table>

<a class="btn btn-outline-primary" role="button" asp-action="CreateSubConditionParagraph" asp-controller="process" asp-route-id="@Model.Id">Добавить</a>

@section scripts{
    <script asp-src-include="~/js/tables.js"></script>
    <script asp-src-include="~/js/select.js"></script>
}



