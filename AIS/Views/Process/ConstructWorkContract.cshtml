@model AIS.ViewModels.DocumentConstructorViewModel;

<h2>Добавление договора</h2>
<form asp-action="ConstructWorkContract" asp-antiforgery="true" asp-controller="process" method="post" enctype="multipart/form-data">
 <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">

        <div class="row">
            <div class="col-5 mb-3">
                <select class="form-select" size="2" data-placeholder="Тип госрегулирования" asp-for="TypeOfStateRegId" asp-items="@Model.TypeOfStateRegs" id="TypeOfStateRegId" onchange="change()">
                </select>
            </div>
            <div class="col-7"><span asp-validation-for="TypeOfStateRegId"></span></div>
        </div>

        <div class="row" id="articleoflaw" style="display: none">
            <div class="col-5 mb-3">
                <select class="form-select" size="2" data-placeholder="Статья закона" asp-for="ArticleOfLawId" asp-items="@Model.ArticleOfLaws" id="ArticleOfLawId">
                </select>
            </div>
            <div class="col-7"></div>
        </div>
        
        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Номер контракта" aria-label="Номер контракта" asp-for="NumberOfContract">
                </div>
            </div>
            <div class="col-7"><span asp-validation-for="NumberOfContract"></span></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="date" min="2015-12-31" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="Дата подписания" aria-label="Дата подписания" asp-for="DateStart">
                </div>
            </div>
            <div class="col-7"><span asp-validation-for="DateStart"></span></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="date" min="2015-12-31" asp-format="{0:yyyy-MM-dd}" class="form-control" placeholder="Дата окончания" aria-label="Дата окончания" asp-for="DateEnd">
                </div>
            </div>
            <div class="col-7"><span asp-validation-for="DateEnd"></span></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <select class="form-select" size="2" data-placeholder="Контрагент" asp-for="PartnerId" asp-items="@Model.MyPartners" id="PartnerId">
                    <option selected disabled>Контрагент</option>
                </select>
            </div>
            <div class="col-7"><span asp-validation-for="PartnerId"></span></div>
        </div>

        <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Предмет контракта" aria-label="Предмет контракта" asp-for="SubjectOfContract">
                </div>
            </div>
            <div class="col-7"><span asp-validation-for="SubjectOfContract"></span></div>
        </div>

                <div class="row">
            <div class="col-5 mb-3">
                <div class="input-group">
                    <input type="number" class="form-control" placeholder="Цена контракта" aria-label="Цена контракта" asp-for="Cost" step="0.01"/>
                </div>
            </div>
            <div class="col-7"><span asp-validation-for="Cost"></span></div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-5 mb-3">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input class="btn btn-primary" type="submit" value="Отправить" />
            </div>
        </div>
        <div class="col-7"></div>
    </div>
</form>



@section scripts{
    <script asp-src-include="~/js/DocumentConstructor.js"></script>
    <script asp-src-include="~/js/select.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

