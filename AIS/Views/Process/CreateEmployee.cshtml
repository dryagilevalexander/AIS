@model Core.Employee;

<h2>Добавление сотрудника контрагента</h2>
<form asp-action="createemployee" asp-controller="process">


 <div class="container">

 <div class="row">
   <div class="col-5 mb-3">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id="">ФИО</span>
        </div>
        <input type="text" class="form-control" asp-for="Name">
        <input type="text" class="form-control" asp-for="FirstName">
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    </div>
 <div class="col-7"></div>
 </div>

<div class="row">
    <div class="col-5 mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Адрес" aria-label="Адрес" asp-for="Address">
    </div>
    </div>
  <div class="col-7"></div>
</div>

<div class="row">
  <div class="col-5 mb-3">
    <div class="input-group-sm mb-3">
        <input type="text" class="form-control" placeholder="Телефон" aria-label="Телефон" asp-for="PhoneNumber">
    </div>
    </div>
  <div class="col-7"></div>
</div>

<div class="row">
  <div class="col-5 mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Email" aria-label="Email" asp-for="Email">
    </div>
    </div>
  <div class="col-7"></div>
</div>

        <div class="row">
            <div class="col-5 mb-3">
                <select size="2" data-placeholder="Контрагент" class="form-select form-select-sm mb-3" asp-for="PartnerId" asp-items="ViewBag.Partners">
                </select>
             </div>
            <div class="col-7"></div>
        </div>
</div>
        <div class="row">
            <div class="col-5 mb-3">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input class="btn btn-primary" type="submit" value="Отправить" />
                </div>
            </div>
            <div class="col-7"></div>
        </div>

</form>

@section scripts{
    <script asp-src-include="~/js/select.js"></script>
}